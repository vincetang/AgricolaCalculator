<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vince.agricolacalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerSelectActivity"
            android:label="@string/title_activity_player_select"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScoreByCount"
            android:label="@string/title_activity_score_counter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScoreByPoints"
            android:label="@string/title_activity_score_by_points"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScoreScreenActivity"
            android:label="@string/title_activity_score_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>